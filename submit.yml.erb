<%
  container_sizes = {
    'standard': {
      'cpu': 1,
      'memory': 4,
    },
    'test': {
      'cpu': 1,
      'memory': 2,
    },
  }

  apps_path = '/apps'

  slurm_args = [ "--nodes 1", "--ntasks-per-node 4", "--mem 4096", "--cpus-per-task 1", "--time #{time}"]
-%>
---
batch_connect:
  template: "basic"
script:
  accounting_id: "<%= account %>"
  wall_time: "<%= time.to_f * 3600 %>"
  native:
  <%- slurm_args.each do |arg| -%>
    - "<%= arg %>"
  <%- end -%>