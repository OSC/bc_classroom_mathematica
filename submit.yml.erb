<%-  
  container_sizes = {
    'standard': {
      'cpu': 1,
      'memory': 4,
    },
    'test': {
      'cpu': 1,
      'memory': 2,
    },
  }

  slurm_args = [ "--nodes", "1", "--ntasks-per-node", "4", "--mem", "4096", "--cpus-per-task", "1", "--time", "10" ]
%>
---
batch_connect:
  template: vnc
script:
  accounting_id: "<%= account %>"
  native:
  <%- slurm_args.each do |arg| %>
    - "<%= arg %>"
  <%- end %>