<%-
  groups = OodSupport::User.new.groups.sort_by(&:id).tap { |groups|
    groups.unshift(groups.delete(OodSupport::Process.group))
  }.map(&:name).grep(/^P./)
-%>

---
cluster:
  - "pitzer"
form:
  - account
  - compute_cluster
  - time
attributes:
  account:
    label: "Project"
    widget: "select"
    options:
      <%- groups.each do |group|  %>
      - "<%= group %>"
      <%- end %>
  compute_cluster:
    widget: "hidden_field"
    options:
      - [
        "pitzer", "pitzer"
        ]
  time:
    widget: "number_field"
    value: 1
    min: 1
    max: 8
    